<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.tory.demo.iconfont.DuIconsTextView
        android:id="@+id/iconTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="这是文字"
        android:textSize="10sp"
        android:gravity="center"
        android:clickable="true"
        app:itv_icon="&#xe64f;"
        app:itv_iconSelected="&#xe64e;"
        app:itv_iconTextPadding="4dp"
        app:itv_iconPadding="10dp"
        app:itv_iconPaddingTop="50dp"
        app:itv_iconSize="40dp"
        app:itv_iconDirection="right"
        app:itv_iconColor="@color/color_icon_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>