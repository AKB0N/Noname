<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DuIconsTextView">
        <attr name="itv_icon" format="string"/>
        <attr name="itv_iconSelected" format="string"/>
        <attr name="itv_iconSize" format="dimension"/>
        <attr name="itv_iconColor" format="color"/>
        <attr name="itv_iconOnly" format="boolean"/>
        <attr name="itv_iconDirection" format="enum">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <!--与文字的间距-->
        <attr name="itv_iconTextPadding" format="dimension"/>

        <!--图标的内间距-->
        <attr name="itv_iconPadding" format="dimension"/>
        <attr name="itv_iconPaddingLeft" format="dimension"/>
        <attr name="itv_iconPaddingTop" format="dimension"/>
        <attr name="itv_iconPaddingRight" format="dimension"/>
        <attr name="itv_iconPaddingBottom" format="dimension"/>
    </declare-styleable>
</resources>