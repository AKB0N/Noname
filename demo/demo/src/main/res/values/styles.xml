<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DefaultSlidTabLayout">
        <item name="tab_textSize">15dp</item>
        <item name="tab_textActiveSize">22dp</item>
        <item name="tab_textColor">#ff14151a</item>
        <item name="tab_textActiveColor">#ff14151a</item>
        <item name="tab_isToggleBoldText">true</item>
        <item name="tab_background">?attr/selectableItemBackground</item>
        <item name="tab_indicatorFitWidth">true</item>
        <item name="tab_paddingStart">10dp</item>
        <item name="tab_paddingEnd">10dp</item>
        <item name="tab_paddingTop">6dp</item>
        <item name="tab_paddingBottom">6dp</item>
        <item name="tab_minHeight">40dp</item>
        <item name="tab_maxHeight">52dp</item>
        <item name="tab_indicatorColor">#ff16a5af</item>
        <item name="tab_indicatorWidth">30dp</item>
        <item name="tab_indicatorHeight">3dp</item>

        <item name="tab_bottomDivider">@drawable/bg_sliding_tab_bottom_line</item>
        <item name="tab_maskRight">@drawable/fg_sliding_tab_mask</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>
