<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_rank_num"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:src="@drawable/bili_default_image_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_rank_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        tools:text="爱丽丝与藏六"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_author"
        app:layout_constraintVertical_bias="0.0"/>


    <com.tory.library.widget.TintTextView
        android:id="@+id/tv_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_category_up"
        android:textSize="12sp"
        tools:text="哔哩哔哩番剧"
        app:drawableTint="?android:attr/textColorSecondary"
        tools:layout_conversion_absoluteHeight="14dp"
        tools:layout_conversion_absoluteWidth="16dp"
        tools:layout_conversion_absoluteX="165dp"
        tools:layout_conversion_absoluteY="42dp"
        android:layout_marginBottom="-1dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_play"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        />


    <com.tory.library.widget.TintTextView
        android:id="@+id/tv_danmakus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_info_views"
        android:textSize="11sp"
        tools:text="1.4万"
        app:drawableTint="?android:attr/textColorSecondary"
        tools:layout_conversion_absoluteHeight="13dp"
        tools:layout_conversion_absoluteWidth="96dp"
        tools:layout_conversion_absoluteX="263dp"
        tools:layout_conversion_absoluteY="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_play"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_play"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_play"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <com.tory.library.widget.TintTextView
        android:id="@+id/tv_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_info_danmakus"
        android:textSize="11sp"
        app:drawableTint="?android:attr/textColorSecondary"
        tools:layout_conversion_absoluteHeight="13dp"
        tools:layout_conversion_absoluteWidth="96dp"
        tools:layout_conversion_absoluteX="165dp"
        tools:layout_conversion_absoluteY="60dp"
        tools:text="36.9万"
        app:layout_constraintLeft_toRightOf="@+id/iv_pic"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>