<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_rank_num"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:src="@drawable/bili_default_image_tv"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textColor="?android:attr/textColorPrimary" />


        <com.tory.library.widget.TintTextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/ic_category_up"
            app:drawableTint="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical">

            <com.tory.library.widget.TintTextView
                android:id="@+id/tv_play"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_info_danmakus"
                app:drawableTint="?android:attr/textColorSecondary"
                android:textSize="11sp" />

            <com.tory.library.widget.TintTextView
                android:id="@+id/tv_danmakus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_info_views"
                app:drawableTint="?android:attr/textColorSecondary"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>