<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:title="基本设置">

    <PreferenceCategory
        android:title="常规">

        <!--<SwitchPreferenceCompat-->
        <CheckBoxPreference
            android:id="@+id/switchPreferenceCompat"
            android:defaultValue="false"
            android:key="mode_night"
            android:summary="切换主题"
            android:title="日间模式"/>
        <Preference
            android:defaultValue="false"
            android:key="cache_clear"
            android:title="清除缓存"/>
        <Preference
            android:defaultValue="false"
            android:key="photo_cache_clear"
            android:title="清除图片缓存"/>
        <Preference
            android:defaultValue="false"
            android:key="empty_dir_delete"
            android:title="删除空目录"/>
        <ListPreference
            android:entries="@array/pf_web_selete_entries"
            android:entryValues="@array/pf_web_selete_entry_values"
            android:key="@string/pf_web_selete_key"
            android:summary="@string/pf_web_selete_summary"
            android:title="@string/pf_web_selete_title"/>

        <Preference
            android:defaultValue="false"
            android:key="test_dialog"
            android:title="test_dialog"/>
    </PreferenceCategory>
</PreferenceScreen>